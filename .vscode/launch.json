{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    // launch config for debugging Vue web apps
    {
      "name": "Debug Nuxt: WebApp",
      "type": "chrome",
      "presentation": {
        "hidden": false,
        "group": "1 PROGRAM:NUXT",
        "order": 3
      },
      "request": "launch",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}"
    },

    {
      "name": "Debug Nuxt: Server",
      "type": "node",
      "presentation": {
        "hidden": false,
        "group": "1 PROGRAM:NUXT",
        "order": 2
      },
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "pnpm",
      "windows": {
        "runtimeExecutable": "pnpm.cmd"
      },
      "runtimeArgs": ["dev"]
    }
  ],
  "compounds": [
    {
      "name": "Debug Nuxt: Server & WebApp",
      "presentation": {
        "hidden": false,
        "group": "1 PROGRAM:NUXT",
        "order": 1
      },
      "stopAll": true,
      "configurations": ["Debug Nuxt: Server", "Debug Nuxt: WebApp"]
    }
  ]
}
