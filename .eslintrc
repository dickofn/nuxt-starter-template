{
  "root": true,
  "env": {
    "browser": true,
    "node": true
  },
  "extends": ["@nuxtjs/eslint-config-typescript"],
  "overrides": [
    {
      "files": ["./server/**/*.ts"],
      "rules": {
        "no-console": [
          "error",
          {
            "allow": ["info", "warn", "trace", "error"]
          }
        ]
      }
    }
  ],
  "rules": {
    "quotes": ["error", "double"],
    "comma-dangle": ["error", "always-multiline"],
    "indent": "off",
    "@typescript-eslint/indent": ["error", 2]
  }
}
